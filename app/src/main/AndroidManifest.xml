<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tienda.app.splash.aplicacionsplash">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".WebViews.AcercaActivity" android:parentActivityName=".WebViews.AcercaActivity"/>
        <activity android:name=".WebViews.Main4Activity" android:parentActivityName=".WebViews.AcercaActivity"/>
        <activity android:name=".WebViews.Main3Activity" android:parentActivityName=".WebViews.AcercaActivity"/>
        <activity android:name=".WebViews.Main2Activity" android:parentActivityName=".WebViews.AcercaActivity"/>
        <activity
            android:name=".Activitys.Activity3"
            android:screenOrientation="portrait" android:parentActivityName=".Activitys.MenuPrincipal"/>
        <activity
            android:name=".Activitys.ActivityStore"
            android:screenOrientation="portrait" android:parentActivityName=".Activitys.MenuPrincipal"/>
        <activity
            android:name=".Activitys.Activity2"
            android:screenOrientation="portrait" android:parentActivityName=".Activitys.MenuPrincipal"/>
        <activity
            android:name=".Activitys.MenuPrincipal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.splash_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>